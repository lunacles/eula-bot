{
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "ESNext",
            "ES2022",
            "DOM"
        ],
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "./dist",

        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
          "*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.d.ts"
    ]
}
